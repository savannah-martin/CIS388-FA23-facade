            <Grid Padding="16" Grid.Row="2" RowSpacing="12" ColumnSpacing="-6">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>

                <Button Grid.Row="0"
                    Grid.Column="0"
                    Text="A"
                    WidthRequest="75"
                    HeightRequest="80"
                    CornerRadius="15"
                    BackgroundColor="#C7E0EA"
                    TextColor="#3E4350"
                    FontSize="48"
                    Command="{Binding AddLetterCommand}"
                    CommandParameter="A"
                />
                <Button Grid.Row="0"
                    Grid.Column="1"
                    Text="B"
                    WidthRequest="75"
                    HeightRequest="80"
                    CornerRadius="15"
                    BackgroundColor="#C7E0EA"
                    TextColor="#3E4350"
                    FontSize="48"
                    Command="{Binding AddLetterCommand}"
                    CommandParameter="B"
                />
                <Button Grid.Row="0"
                    Grid.Column="2"
                    Text="C"
                    WidthRequest="75"
                    HeightRequest="80"
                    CornerRadius="15"
                    BackgroundColor="#C7E0EA"
                    TextColor="#3E4350"
                    FontSize="48"
                    Command="{Binding AddLetterCommand}"
                    CommandParameter="C"
                />
                <Button Grid.Row="1"
                    Grid.Column="0"
                    Text="D"
                    WidthRequest="75"
                    HeightRequest="80"
                    CornerRadius="15"
                    BackgroundColor="#C7E0EA"
                    TextColor="#3E4350"
                    FontSize="48"
                    Command="{Binding AddLetterCommand}"
                    CommandParameter="D"
                />
                <Button Grid.Row="1"
                    Grid.Column="1"
                    Text="E"
                    WidthRequest="75"
                    HeightRequest="80"
                    CornerRadius="15"
                    BackgroundColor="#C7E0EA"
                    TextColor="#3E4350"
                    FontSize="48"
                    Command="{Binding AddLetterCommand}"
                    CommandParameter="E"
                />
                <Button Grid.Row="1"
                    Grid.Column="2"
                    Text="F"
                    WidthRequest="75"
                    HeightRequest="80"
                    CornerRadius="15"
                    BackgroundColor="#C7E0EA"
                    TextColor="#3E4350"
                    FontSize="48"
                    Command="{Binding AddLetterCommand}"
                    CommandParameter="F"
                />
                <Button Grid.Row="0"
                    Grid.Column="3"
                    Text="▲"
                    WidthRequest="60"
                    HeightRequest="70"
                    CornerRadius="15"
                    BackgroundColor="#C7E0EA"
                    TextColor="#3E4350"
                    Command= "{Binding GuessCommand}"
                    FontSize="32"
                >
                    <Button.Shadow>
                        <Shadow Brush="Gray"
                                Offset="0,0"
                                Radius="5"
                                Opacity="0.5" />
                    </Button.Shadow>
                </Button>
                <Button Grid.Row="1"
                    Grid.Column="3"
                    Text="⌫"
                    WidthRequest="60"
                    HeightRequest="70"
                    CornerRadius="15"
                    BackgroundColor="#C7E0EA"
                    TextColor="#333"
                    FontSize="36"
                    Command="{Binding DeleteLetterCommand}"

                />


            </Grid>
        </Grid>

    </ScrollView>

</ContentPage>

